@model Models.TourPackage

@{
    ViewBag.Title = "افزودن ";
    Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}

<h2>افزودن @Html.DisplayNameFor(model => model)</h2>

@using (Html.BeginForm("Create", "TourPackages", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        @Html.ValidationSummary(true)

	    <div class="form-group">
		    
		    <div class="form-group">
			    @Html.LabelFor(model => model.Order, new {@class = "control-label col-md-2"})
			    <div class="col-md-10">
				    @Html.EditorFor(model => model.Order)

				    @Html.ValidationMessageFor(model => model.Order)
			    </div>
		    </div>


		    <div class="form-group">
			    @Html.LabelFor(model => model.Hotel.Title, new { @class = "control-label col-md-2" })
			    <div class="col-md-10">
				    @Html.DropDownList("HotelId", String.Empty)
				    @Html.ValidationMessageFor(model => model.HotelId)
			    </div>
		    </div>

		    <div class="form-group">
			    @Html.LabelFor(model => model.TwoBedRoomPrice, new {@class = "control-label col-md-2"})
			    <div class="col-md-10">
				    @Html.EditorFor(model => model.TwoBedRoomPrice)

				    @Html.ValidationMessageFor(model => model.TwoBedRoomPrice)
			    </div>
		    </div>

		    <div class="form-group">
			    @Html.LabelFor(model => model.OneBedRoomPrice, new {@class = "control-label col-md-2"})
			    <div class="col-md-10">
				    @Html.EditorFor(model => model.OneBedRoomPrice)

				    @Html.ValidationMessageFor(model => model.OneBedRoomPrice)
			    </div>
		    </div>

		    <div class="form-group">
			    @Html.LabelFor(model => model.ChildWithBedPrice, new {@class = "control-label col-md-2"})
			    <div class="col-md-10">
				    @Html.EditorFor(model => model.ChildWithBedPrice)

				    @Html.ValidationMessageFor(model => model.ChildWithBedPrice)
			    </div>
		    </div>

		    <div class="form-group">
			    @Html.LabelFor(model => model.ChildWithoutBedPrice, new {@class = "control-label col-md-2"})
			    <div class="col-md-10">
				    @Html.EditorFor(model => model.ChildWithoutBedPrice)

				    @Html.ValidationMessageFor(model => model.ChildWithoutBedPrice)
			    </div>
		    </div>

		    <div class="form-group">
			    @Html.LabelFor(model => model.Description, new {@class = "control-label col-md-2"})
			    <div class="col-md-10">
				    @Html.EditorFor(model => model.Description)

				    @Html.ValidationMessageFor(model => model.Description)
			    </div>
		    </div>

		    <div class="form-group">
			    @Html.LabelFor(model => model.TwoBedRoomPrice_ExtraNight, new {@class = "control-label col-md-2"})
			    <div class="col-md-10">
				    @Html.EditorFor(model => model.TwoBedRoomPrice_ExtraNight)

				    @Html.ValidationMessageFor(model => model.TwoBedRoomPrice_ExtraNight)
			    </div>
		    </div>

		    <div class="form-group">
			    @Html.LabelFor(model => model.OneBedRoomPrice_ExtraNight, new {@class = "control-label col-md-2"})
			    <div class="col-md-10">
				    @Html.EditorFor(model => model.OneBedRoomPrice_ExtraNight)

				    @Html.ValidationMessageFor(model => model.OneBedRoomPrice_ExtraNight)
			    </div>
		    </div>

		    <div class="form-group">
			    @Html.LabelFor(model => model.ChildWithBedPrice_ExtraNight, new {@class = "control-label col-md-2"})
			    <div class="col-md-10">
				    @Html.EditorFor(model => model.ChildWithBedPrice_ExtraNight)

				    @Html.ValidationMessageFor(model => model.ChildWithBedPrice_ExtraNight)
			    </div>
		    </div>

		    <div class="form-group">
			    @Html.LabelFor(model => model.ChildWithoutBedPrice_ExtraNight, new {@class = "control-label col-md-2"})
			    <div class="col-md-10">
				    @Html.EditorFor(model => model.ChildWithoutBedPrice_ExtraNight)

				    @Html.ValidationMessageFor(model => model.ChildWithoutBedPrice_ExtraNight)
			    </div>
		    </div>


		    <div class="form-group" id="buttons">
			    <div class="col-md-offset-2 col-md-10">
				    <input type="submit" value="ایجاد" class="btn btn-primary"/>
				    @Html.ActionLink("بازگشت به فهرست", "Index", new {id = ViewBag.id})
			    </div>
		    </div>
	    </div>
</div>
}

