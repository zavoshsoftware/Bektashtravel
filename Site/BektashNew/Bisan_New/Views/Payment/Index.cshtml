@model Bisan_New.Controllers.paymentViewModel

@{
		ViewBag.Title = "Index";
		Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}

@{
		Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<title>@ViewBag.Title</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="@ViewBag.Description">
	<link rel="icon" href="/Images/favicon.png">
	<link rel="apple-touch-icon" href="/images/touch-icon-iphone.png" />
	<link href="/Content/css/vendor/bootstrap.min.css" rel="stylesheet">
	<link href="/Content/css/vendor/simple-line-icons.css" rel="stylesheet">
	<link href="/Content/css/vendor/themify-icons.css" rel="stylesheet">
	<link href="/Content/css/vendor/owl.carousel.css" rel="stylesheet">
	<link href="/Content/css/vendor/animate.css" rel="stylesheet">
	<link href="/Content/css/vendor/viewbox.css" rel="stylesheet">
	<link href="/Content/css/vendor/bootstrap-slider.min.css" rel="stylesheet">
	<link href="~/Content/PersianDatePicker.min.css" rel="stylesheet" />
	<script src="/Scripts/js/vendor/fontawesome-all.min.js"></script>
	<link href="/Content/css/scss/main.css" rel="stylesheet">
	<link href="/Content/css/vendor/style-rtl.css" rel="stylesheet" />
	<link rel="canonical" href="@ViewBag.Canonical" />
	<script async src="https://www.googletagmanager.com/gtag/js?id=UA-110478869-1"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag() { dataLayer.push(arguments); }
		gtag('js', new Date());

		gtag('config', 'UA-110478869-1');
	</script>
</head>
<body>

	<form id="form1" method="post" action="https://sep.shaparak.ir/payment.aspx">
		<div>
			<input type="hidden" name="Amount" value="@Model.Amount" />
			<input type="hidden" name="ResNum" value="@Model.ResNum" />
			<input type="hidden" name="MID" value="@Model.MID" />
			<input type="hidden" name="RedirectURL" value="@Model.RedirectURL" />
			<table id="tabMain" runat="server" border="0" cellpadding="0" cellspacing="0" style="color:#0066cc; text-align: center; margin: 100px auto;">
	 
				<tr>
					<td>
						برای انتقال به صفحه پرداخت بر روی دکمه زیر کلیک کنید
					</td>
				</tr>
				<tr>
					<td style="border-top: red 4px solid; border-right: red 4px solid; border-left: red 4px solid; border-bottom: red 4px solid;">
						<input type="submit" value="پرداخت" id="OK" />
					</td>
				</tr>
			</table>
		</div>
	</form>

</body>
</html>
