@model Models.HotelFeature

@{
    ViewBag.Title = "افزودن ";
    Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}

<h2>افزودن @Html.DisplayNameFor(model => model)</h2>

@using (Html.BeginForm("Create", "HotelFeatures",FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        @Html.ValidationSummary(true)

        <div class="form-group">
        <div class="form-group">
            @Html.LabelFor(model => model.FeatureId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FeatureId", String.Empty)
                @Html.ValidationMessageFor(model => model.FeatureId)
            </div>
        </div>

     

        <div class="form-group">
            @Html.LabelFor(model => model.LastModificationDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.LastModificationDate)

                @Html.ValidationMessageFor(model => model.LastModificationDate)
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
				@Html.ActionLink("بازگشت به فهرست", "Index",new{id=ViewBag.HotelId})
            </div>
        </div>
        </div>
</div>
}

